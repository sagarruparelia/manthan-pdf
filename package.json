{
  "name": "pdf-master-tool",
  "version": "1.0.0",
  "description": "PDF Merge & Sequence Manager - Drag, Sort, Merge PDFs offline",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.manthan.pdfmaster",
    "productName": "PDF Master Tool",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "node_modules/pdf-lib/**/*",
      "node_modules/sortablejs/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "keywords": [
    "pdf",
    "merge",
    "electron"
  ],
  "author": "Manthan Ruparelia & Associates",
  "license": "ISC",
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "sortablejs": "^1.15.6"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  }
}
