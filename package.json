{
  "name": "pdf-master-tool",
  "version": "1.0.0",
  "description": "PDF Merge & Sequence Manager - Drag, Sort, Merge PDFs offline",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.manthan.pdfmaster",
    "productName": "PDF Master Tool",
    "files": [
      "main.js",
      "Pro_PDF_Manager.html",
      "lib/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": ["pdf", "merge", "electron"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  }
}
